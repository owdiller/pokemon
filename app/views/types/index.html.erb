<h1>Types</h1>

<p><a href="/new_type">Add a New Type</a></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Img</th>
      <th>Type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @types.each do |type| %>
    <tr>
          <td><%= type.name %></td>
          <td><img src="<%= type.img %>"></td>
          <td><%= type.type_id %></td>
          <td><a href="/types/<%= type.id %>">Show</a>
        </td>
      <td><a href="/types/<%= type.id %>/edit">Edit</a></td>
      <td><a href="/types/<%= type.id %>/destroy">Destroy</a></td>
    </tr>
  <% end %>
  </tbody>
</table>

